{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend API pour Application de Gestion Juridique",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "jest --coverage --maxWorkers=50%",
    "test:unit": "jest --selectProject=unit --coverage",
    "test:integration": "jest --selectProject=integration --coverage --runInBand",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci --maxWorkers=2",
    "test:ci:unit": "jest --selectProject=unit --coverage --ci --maxWorkers=2",
    "test:ci:integration": "jest --selectProject=integration --coverage --ci --runInBand",
    "build": "tsc",
    "start": "node ./dist/index.js",
    "dev": "npm run build && npm run start",
    "migrate": "ts-node scripts/migrate.ts",
    "seed": "ts-node scripts/seed.ts"
  },
  "keywords": [
    "juridique",
    "gestion",
    "api",
    "backend"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/qrcode": "^1.5.6",
    "@types/speakeasy": "^2.0.10",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.12",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0",
    "uuid": "^11.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
